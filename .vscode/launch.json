    "version": "0.2.0",
    "inputs": [
        {
          "type": "promptString",
          "id": "cliArgs",
          "description": "Select Arguments",
          "default": "show gateway"
        //   "default": "batch --key test-acl"
        },
      ],
    "configurations": [
        {
            "name": "cli interactive arg selection",
            "type": "python",
            "request": "launch",
            "program": "cli.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["${input:cliArgs}"],
            "argsExpansion": "shell"
        },
        {
            "name": "ana-cli interactive arg selection",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["${input:cliArgs}"],
            "argsExpansion": "shell"
        },
        {
